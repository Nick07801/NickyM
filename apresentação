<script>
  const frases = document.querySelectorAll('.frase');
  const pontos = document.querySelectorAll('.ponto');
 
  function mostrarFrase(indice) {
    frases.forEach(f => f.classList.remove('ativa'));
    pontos.forEach(p => p.classList.remove('ativo'));
    frases[indice].classList.add('ativa');
    pontos[indice].classList.add('ativo');
  }
 
  // Inicializa com a primeira frase visível
  mostrarFrase(0);
</script>
